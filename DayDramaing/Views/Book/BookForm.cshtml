@model DayDramaing.Models.BookModel

@using (Html.BeginForm("Index", "Book"))
{
     if (!ViewData.ModelState.IsValid)
     {
            <div id="errors" class="ui-widget bottom-margin">
		        <div style="padding: 0.7em;" class="ui-state-error ui-corner-all"> 	
                    @Html.ValidationSummary(false, "Error. Please correct the errors and try again.")
		        </div>
	        </div>
     }

    <fieldset>
        <legend>Book</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
       
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
              @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
          
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Telephone)
            @Html.ValidationMessageFor(model => model.Telephone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Telephone)
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameOfSchool)
            @Html.ValidationMessageFor(model => model.NameOfSchool)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameOfSchool)
            
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.YourLocation)
            @Html.ValidationMessageFor(model => model.YourLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.YourLocation)
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.When)
            @Html.ValidationMessageFor(model => model.When)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.When)
         
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.What)
            @Html.ValidationMessageFor(model => model.What)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.What)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CaptchaValid)
            @Html.ValidationMessageFor(model => model.CaptchaValid)
        </div>
        <div class="editor-field">
            @Html.GenerateCaptcha()
            
        </div>

        <div class="button">
            <input type="submit" value="Book" />
        </div>
  
        
    </fieldset>
}