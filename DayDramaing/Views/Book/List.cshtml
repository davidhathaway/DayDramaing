@model IEnumerable<DayDramaing.Models.ListBookModel>

@{
    ViewBag.Title = "List";
}

<div class="page-title intro grid_16">
    <h2>Bookings Listed</h2>
</div>

<div id="list" class="single-col grid_16">

<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Telephone
        </th>
        <th>
            Created On
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.BookingId }) 
        </td>
    </tr>
}

</table>

</div>

<div class="single-col grid_16">

    <p>
    @Html.ActionLink("Admin Area", "Index", "Admin")
    </p>
</div>
