<!DOCTYPE html>
<html>
<head>
    @{
        string title = "Day Drama-ing";
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Learning Through Drama - we provide quality interactive drama workshops." />
    <title>@title</title>
    <link href="@Url.Content("~/Content/grid/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/grid/text.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/grid/960.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/redmond/jquery-ui.css")" rel="stylesheet" type="text/css" />


    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.21.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
    <body id="page-home">
  
    <div id="wrapper">

        <div id="header">
            <div class="container_16 clearfix">

                <div id="header-left" class="grid_8 alpha">
                    <h1 id="logo">@Html.ActionLink("Day Drama-ing", "Index", "Home")<span class="logo-sub"> | learning through drama</span></h1>
                </div>

                <div id="header-right" class="grid_8 omega floatright">

                    <div id="nav">
                        <ul>
                            <li id="about">@Html.ActionLink("About","About","Home")</li>
                            <li id="book">@Html.ActionLink("Book","Index","Book")</li>
                            <li id="contact">@Html.ActionLink("Contact","Contact","Home")</li>
                        </ul>
                    </div>

                </div>

            </div>
        </div>

        <div id="main" class="clearfix">
            <div class="container_16 clearfix">
                <div class="content">
                    @RenderBody()
                </div>
             </div>
        </div>

        <div id="footer">
            <div class="container_16"> 
               <div class="grid_8 alpha">Day drama-ing Copyright 2012</div><div class="grid_omega"></div>
            </div>
            <br clear="all">
        </div>

    </div>
    </body>
</html>
